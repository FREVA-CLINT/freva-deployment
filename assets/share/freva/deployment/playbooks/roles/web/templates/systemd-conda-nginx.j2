[Unit]
Description=Freva web Porxy server
After=network.target

[Service]
Type=simple
{% if (ansible_become == true and ansible_become_user == 'root') or ansible_user == 'root' %}
ProtectSystem=full
ProtectHome=true
{% endif %}
ReadWritePaths={{conda_path }}
PermissionsStartOnly=true
NoNewPrivileges=true
KillSignal=SIGTERM
ExecStart={{conda_path}}/bin/start-freva-service -s nginx
EnvironmentFile={{ data_dir }}/config/service-nginx.env
Environment="PATH={{conda_path}}/bin:{{ ansible_env.PATH }}"
StandardOutput=journal
StandardError=journal
Restart=on-failure
RestartSec=5
StartLimitBurst=5
UMask=007
[Install]
WantedBy=multi-user.target
